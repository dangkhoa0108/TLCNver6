@model List<TLCNVer6.ViewModel.ChiTietHopDongViewModel>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="page-header">
        <h1>
            <i class="ace-icon fa fa fa-database"></i> <a href="#">
                Dữ liệu
            </a>

            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Quản lý chi tiết phiếu nhập
            </small>
        </h1>
    </div><!-- /.page-header -->
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <div class="row">
                <div class="col-xs-12"></div>
                <!-- /.span -->
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-xs-12">
                    <h3 class="header smaller lighter blue">
                        Quản lý chi tiết hợp đồng
                    </h3>

                    <div class="clearfix">
                        <div class="pull-right tableTools-container"></div>
                    </div>
                    <div class="table-header">Quản lý chi tiết hợp đồng</div>

                    <div>
                        <table id="dynamic-table"
                               class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Mã hợp đồng</th>
                                    <th>Tên mặt hàng</th>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                    <th>Tổng</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MaHD</td>
                                        <td>@item.TenMatHang</td>
                                        <td>@item.SoLuong</td>
                                        <td>@item.DonGia</td>
                                        <td>@item.Tong</td>
                                        <td>
                                            <div class="hidden-sm hidden-xs action-buttons">
                                                @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "ace-icon fa fa-pencil bigger-130 green" })

                                                @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "ace-icon fa fa-trash-o bigger-130 red" })
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-xs btn-success ace-icon fa fa-plus-circle" })
            <!-- PAGE CONTENT ENDS -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>