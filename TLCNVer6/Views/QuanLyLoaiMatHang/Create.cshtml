@model TLCNVer6.Models.LoaiMatHang

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="page-header">
        <h1>
            <i class="ace-icon fa fa fa-database"></i> <a href="#">
                Dữ liệu
            </a>

            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Thêm loại mặt hàng
            </small>
        </h1>
    </div><!-- /.page-header -->
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i> Thêm
                    Loại Mặt Hàng
                </div>

                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="panel-body">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaLoaiMH, "Mã loại mặt hàng")
                            @Html.EditorFor(model => model.MaLoaiMH, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MaLoaiMH, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TenLoaiMH, "Tên loại mặt hàng")
                            @Html.EditorFor(model => model.TenLoaiMH, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenLoaiMH, "", new { @class = "text-danger" })

                        </div>

                        <a>
                            <input class="btn btn-primary " type="submit" value="Tạo" />
                            @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-success " })
                        </a>
                    </div>
                }

            </div>

        </div>
    </div>
</div>