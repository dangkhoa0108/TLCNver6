@model TLCNVer6.Models.ThongTinHopDong

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="page-header">
        <h1>
            <i class="ace-icon fa fa fa-database"></i> <a href="#">
                Dữ liệu
            </a>

            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Chỉnh sửa thông tin hợp đồng
            </small>
        </h1>
    </div><!-- /.page-header -->

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i> Sửa
                    thông tin hợp đồng
                </div>
                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="panel-body">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.MaHD)
                        @Html.HiddenFor(model => model.NguoiLap)

                        <div class="form-group">
                            @Html.LabelFor(model => model.TinhChat, "Tính chất")
                            @Html.EditorFor(model => model.TinhChat, new { htmlAttributes = new { @class = "form-control"} })
                            @Html.ValidationMessageFor(model => model.TinhChat, "", new { @class = "text-danger" })
                        </div>


                        <div class="form-group">
                            @Html.LabelFor(model => model.MaKho, "Mã kho")
                            @Html.DropDownList("MaKho", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaKho, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.MaDV, "Mã đơn vị")
                            @Html.DropDownList("MaDV", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaDV, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.NgayKi, "Ngày kí")
                            @Html.EditorFor(model => model.NgayKi, new { htmlAttributes = new { @class = "form-control", @type="date" } })
                            @Html.ValidationMessageFor(model => model.NgayKi, "", new { @class = "text-danger" })
                        </div>

                        <a>
                            <input class="btn btn-primary " type="submit" value="Sửa" />
                            @Html.ActionLink("Trở về", "Index", "ThongTinHopDong", null, new { @class = "btn btn-success " })
                        </a>
                    </div>
                }

            </div>

        </div>
    </div>
</div>