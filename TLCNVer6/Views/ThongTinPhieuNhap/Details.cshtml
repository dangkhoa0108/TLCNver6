@model List<TLCNVer6.ViewModel.BaoCaoChiTietPhieuNhapTheoThoiGian>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="page-header">
        <h1>
            <i class="ace-icon glyphicon glyphicon-info-sign"></i> <a href="#">
                Báo cáo
            </a>

            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Báo cáo chi tiết phiếu nhập theo thời gian
            </small>
        </h1>
    </div><!-- /.page-header -->
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <div class="row">
                <div class="col-xs-12"></div>
                <!-- /.span -->
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-xs-12">
                    <h3 class="header smaller lighter blue">
                        <i class="ace-icon fa fa-info"></i>
                        Báo cáo chi tiết phiếu nhập theo thời gian
                    </h3>

                    <div class="">
                        <div class="pull-right tableTools-container"></div>
                    </div>
                    <div class="table-header">Chi tiết hàng nhập</div>

                    <!-- div.table-responsive -->
                    <!-- div.dataTables_borderWrap -->
                    <div>
                        <table id=""
                               class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="center">
                                        Mã  phiếu nhập
                                    </th>
                                    <th>Ngày tạo phiếu</th>
                                    <th>Giá trị phiếu</th>
                                    <th>Người lập phiếu</th>
                                    <th>Tên đơn vị</th>
                                </tr>
                            </thead>

                            <tbody>

                                @if (Model == null)
                                {
                                <tr>
                                    <td>    không có giá trị thỏa!!!</td>

                                </tr>
                                }

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="center">
                                            @item.MaPN
                                        </td>
                                        <td>
                                            @item.NgayLap
                                        </td>
                                        <td>@item.GiaTriDen</td>
                                        <td class="hidden-480">@item.NguoiLap</td>
                                        <td>@item.TenDV</td>
           
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- PAGE CONTENT ENDS -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>