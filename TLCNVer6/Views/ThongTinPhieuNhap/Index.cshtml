@model IEnumerable<TLCNVer6.Models.ThongTinPN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="page-header">
        <h1>
            <i class="ace-icon fa fa fa-database"></i> <a href="#">
                Dữ liệu
            </a>

            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Quản lý phiếu nhập
            </small>
        </h1>
    </div><!-- /.page-header -->
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <div class="row">
                <div class="col-xs-12"></div>
                <!-- /.span -->
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-xs-12">
                    <h3 class="header smaller lighter blue">
                        Quản lý phiếu nhập
                    </h3>

                    <div class="clearfix">
                        <div class="pull-right tableTools-container"></div>
                    </div>
                    <div class="table-header">Quản lý phiếu nhập</div>

                    <div>
                        <table id="dynamic-table"
                               class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Mã phiếu nhập</th>
                                    <th>Ngày lập</th>
                                    <th>Giá trị đến</th>
                                    <th>Người lập</th>
                                    <th>Tên đơn vị</th>                               
                                    <th>Thao tác</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MaPN</td>
                                        <td>@item.NgayLap</td>
                                        <td>@item.GiaTriDen</td>
                                        <td>@item.Login.HoTen</td>
                                        <td>@item.DonViGiaoNhan.TenDV</td>                                      
                                        <td>
                                            <div class="hidden-sm hidden-xs btn-group">


                                                @Html.ActionLink("Xem","Details", "ChiTietPhieuNhap", new { id = item.ID }, new { @class = "btn btn-xs btn-info fa fa-info-circle " })                          

                                            </div>


                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            @Html.ActionLink("Thêm mới","Index", "QuanLyPhieuNhap", new object { },new { @class = "btn btn-xs btn-success ace-icon fa fa-plus-circle" })
            <!-- PAGE CONTENT ENDS -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>