@model TLCNVer6.Models.ThongTinPN

@{
    ViewBag.Title = "Find";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="page-header">
        <h1>
            <i class="ace-icon glyphicon glyphicon-info-sign"></i> <a href="#">
                Báo cáo
            </a>

            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Lọc theo điều kiện
            </small>
        </h1>
    </div><!-- /.page-header -->
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <i class="fa fa-search" aria-hidden="true"></i> Báo cáo chi tiết phiếu nhập theo thời gian
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Details", "ThongTinPhieuNhap", FormMethod.Post))
                    {

                        <div class="form-group">
                            @Html.LabelFor(model => model.MaDonVi, "Tên đơn vị")
                            @Html.DropDownList("DVGN", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaDonVi, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.NgayLap, "Từ ngày:")
                            @Html.EditorFor(model => model.NgayLap, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                            @Html.ValidationMessageFor(model => model.NgayLap, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.GiaTriDen, "Đến ngày:")
                            @Html.EditorFor(model => model.GiaTriDen, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                            @Html.ValidationMessageFor(model => model.GiaTriDen, "", new { @class = "text-danger" })
                        </div>

                        <input class="btn btn-primary " type="submit" value="Submit" />
                        <button type="reset" class="btn btn-default">Bỏ qua</button>

                    }

                </div>
            </div>

        </div>
    </div>
</div>
