@model IEnumerable<TLCNVer6.Models.Login>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="page-header">
        <h1>
            <i class="ace-icon fa fa fa-desktop"></i> <a href="#">
                Hệ Thống
            </a>

            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Quản lý tài khoản
            </small>
        </h1>
    </div><!-- /.page-header -->
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <div class="row">
                <div class="col-xs-12"></div>
                <!-- /.span -->
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-xs-12">
                    <h3 class="header smaller lighter blue">
                        Trang Quản Lý Người Dùng Của Admin
                    </h3>

                    <div class="clearfix">
                        <div class="pull-right tableTools-container"></div>
                    </div>
                    <div class="table-header">Danh sách người dùng</div>

                    <!-- div.table-responsive -->
                    <!-- div.dataTables_borderWrap -->
                    <div>
                        <table id="dynamic-table"
                               class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>User Name</th>
                                    <th class="hidden-480">Role</th>

                                    <th>
                                        <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                                        Họ tên
                                    </th>
                                    <th class="hidden-480">Địa chỉ</th>
                                    <th>Số điện thoại</th>

                                    <th>Hành động</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ID</td>
                                        <td>@item.Username</td>
                                        <td class="hidden-480">@item.Role</td>
                                        <td>@item.HoTen</td>

                                        <td class="hidden-480">
                                            <span class="label">@item.DiaChi</span>
                                        </td>
                                        <td>@item.SoDT</td>
                                        <td>
                                            <div class="hidden-sm hidden-xs btn-group">


                                                @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "btn btn-xs btn-info ace-icon fa fa-pencil bigger-120" })

                                                @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "btn btn-xs btn-danger ace-icon fa fa-trash-o bigger-120" })

                                            </div>


                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-xs btn-success ace-icon fa fa-plus-circle" })
            <!-- PAGE CONTENT ENDS -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>