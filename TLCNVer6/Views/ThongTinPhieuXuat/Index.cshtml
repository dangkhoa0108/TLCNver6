@model IEnumerable<TLCNVer6.Models.ThongTinPX>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="page-header">
        <h1>
            <i class="ace-icon fa fa fa-database"></i> <a href="#">
                Dữ liệu
            </a>

            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Quản lý phiếu xuất
            </small>
        </h1>
    </div><!-- /.page-header -->
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <div class="row">
                <div class="col-xs-12"></div>
                <!-- /.span -->
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-xs-12">
                    <h3 class="header smaller lighter blue">
                        Quản lý phiếu xuất
                    </h3>

                    <div class="clearfix">
                        <div class="pull-right tableTools-container"></div>
                    </div>
                    <div class="table-header">Quản lý phiếu xuất</div>

                    <div>
                        <table id="dynamic-table"
                               class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Mã phiếu xuất</th>
                                    <th>Ngày lập</th>
                                    <th>Giá trị đến</th>
                                    <th>Người lập</th>
                                    <th>Tên kho</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MaPX</td>
                                        <td>@(item.NgayLap.HasValue ? item.NgayLap.Value.ToString("dd/MM/yyyy") : "")</td>
                                        <td>@(item.GiaTriDen.HasValue ? item.GiaTriDen  .Value.ToString("dd/MM/yyyy") : "")</td>
                                        <td>@item.Login.HoTen</td>
                                        <td>@item.Kho.TenKho</td>
                                        <td>
                                            <div class="hidden-sm hidden-xs btn-group">


                                                @Html.ActionLink(" ", "Details", "ChiTietPhieuXuat", new { id = item.ID }, new { @class = "ace-icon fa fa-info-circle bigger-130 blue " })

                                                @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "ace-icon fa fa-pencil bigger-130 green" })

                                                @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "ace-icon fa fa-trash-o bigger-130 red" })


                                            </div>


                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            @Html.ActionLink("Thêm mới", "Index", "QuanLyPhieuXuat", new object { }, new { @class = "btn btn-xs btn-success ace-icon fa fa-plus-circle" })
            <!-- PAGE CONTENT ENDS -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>