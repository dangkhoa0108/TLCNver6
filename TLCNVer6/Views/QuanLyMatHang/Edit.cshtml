@model TLCNVer6.Models.MatHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="page-header">
        <h1>
            <i class="ace-icon fa fa fa-database"></i> <a href="#">
                Dữ liệu
            </a>

            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Chỉnh sửa mặt hàng
            </small>
        </h1>
    </div><!-- /.page-header -->

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i> Sửa
                    Mặt hàng
                </div>
                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="panel-body">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.MaMatHang)

                        <div class="form-group">
                            @Html.LabelFor(model => model.MaLoaiMH, "Tên loại mặt hàng")

                            @Html.DropDownList("MaLoaiMH", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaLoaiMH, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TenMatHang, "Tên mặt hàng")

                            @Html.EditorFor(model => model.TenMatHang, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenMatHang, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.DonViTinh, "Đơn vị tính")

                            @Html.EditorFor(model => model.DonViTinh, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DonViTinh, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.MaKho, "Tên kho")

                            @Html.DropDownList("MaKho", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaKho, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.SoLuong, "Số lượng")

                            @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })

                        </div>

                        <a>
                            <input class="btn btn-primary " type="submit" value="Sửa" />
                            @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-success " })
                        </a>
                    </div>
                }

            </div>

        </div>
    </div>
</div> 