@model IEnumerable<TLCNVer6.Models.MatHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="page-header">
        <h1>
            <i class="ace-icon fa fa fa-database"></i> <a href="#">
                Dữ liệu
            </a>

            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Quản lý mặt hàng
            </small>
        </h1>
    </div><!-- /.page-header -->
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <div class="row">
                <div class="col-xs-12"></div>
                <!-- /.span -->
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-xs-12">
                    <h3 class="header smaller lighter blue">
                        Quản lý mặt hàng
                    </h3>

                    <div class="clearfix">
                        <div class="pull-right tableTools-container"></div>
                    </div>
                    <div class="table-header">Danh sách hàng</div>

                    <!-- div.table-responsive -->
                    <!-- div.dataTables_borderWrap -->
                    <div>
                        <table id="dynamic-table"
                               class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="center">
                                        <label class="pos-rel">
                                            <input type="checkbox" class="ace" /> <span class="lbl"></span>
                                        </label>
                                    </th>
                                    <th>Mã mặt hàng</th>
                                    <th>Tên mặt hàng</th>
                                    <th class="hidden-480">Tên loại mặt hàng</th>

                                    <th>
                                        <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                                        Tên kho
                                    </th>
                                    <th class="hidden-480">Số lượng</th>

                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="center">
                                            <label class="pos-rel">
                                                <input type="checkbox" class="ace" /> <span class="lbl"></span>
                                            </label>
                                        </td>

                                        <td>@item.MaMatHang</td>
                                        <td>@item.TenMatHang</td>
                                        <td class="hidden-480">@item.LoaiMatHang.TenLoaiMH</td>
                                        <td>@item.Kho.TenKho</td>

                                        <td class="hidden-480">
                                            <span class="label">@item.SoLuong</span>
                                        </td>

                                        <td>
                                            <div class="hidden-sm hidden-xs btn-group">


                                                @Html.ActionLink(" ", "Edit", new { id = item.MaMatHang }, new { @class = "btn btn-xs btn-info ace-icon fa fa-pencil bigger-120" })

                                                @Html.ActionLink(" ", "Delete", new { id = item.MaMatHang }, new { @class = "btn btn-xs btn-danger ace-icon fa fa-trash-o bigger-120" })

                                            </div>


                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-xs btn-success ace-icon fa fa-plus-circle" })
            <!-- PAGE CONTENT ENDS -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>